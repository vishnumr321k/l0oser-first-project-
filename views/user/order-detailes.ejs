                            image: '/img/zero.png',
                            order_id: data.id,
                            handler: function (response) {
                                fetch('/verify-Payment', {
                                    method: 'POST',
                                    headers: {
                                        'Content-Type': 'application/json'
                                    },
                                    body: JSON.stringify({
                                        razorpayOrderId: response.razorpay_order_id,
                                        razorpayPaymentId: response.razorpay_payment_id,
                                        razorpaySignature: response.razorpay_signature,
                                    })
                                })
                                    .then(res => res.json())
                                    .then(verificationData => {
                                        if (verificationData.success) {
                                            Swal.fire({
                                                icon: 'success',
                                                title: 'Paymnet is SuccessFullyCompleated...ü§©',
                                                confirmButton:false,
                                                
                                            })
                                            setTimeout(() => {
                                                window.location.reload()
                                            }, 1000);
                                        } else {
                                            Swal.fire({
                                                icon: 'error',
                                                title: 'Again Faile...'
                                            })
                                        }
                                    })
                                    .catch((error) => {
                                        console.error('Payment Verification Error...ü•≤', error)
                                        Swal.fire({
                                            icon: 'error',
                                            title: 'Error',
                                            text: 'Sumthing Wronge...'
                                        })
                                    })
                            },
                            prefill: {
                                name: 'Guest',
                                email: 'guest@gmnail.com',
                                contact: '1234567890',
                            },
                            theme: {
                                color: '#00000'
                            }
                        }
                        console.log('opening razorpay');

                        const razorpayPage = new Razorpay(options);
                        razorpayPage.open();
                    } else {
                        Swal.fire(
                            'Retry Failed...',
                            data.message,
