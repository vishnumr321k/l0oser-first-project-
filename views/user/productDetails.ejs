                                        <% for(let i=0;i< product.productImage.length; i++) { %>
                                        <div><img src="/uploads/re-image/<%=product.productImage[i]%>" alt="<%= product.productName %>"></div>
                                        <%}%>
                                    </div>
                                </div>
                                <!-- End Gallery -->
                            </div>
