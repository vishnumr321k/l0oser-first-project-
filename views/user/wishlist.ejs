        <section class="mt-50 mb-50">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <div class="table-responsive">
                            <table class="table shopping-summery text-center">
                                <thead>
                                    <tr class="main-heading">
                                        <th scope="col" colspan="2">Product</th>
                                        <th scope="col">Price</th>
                                        <th scope="col">Stock Status</th>
                                        <th scope="col">Action</th>
                                        <th scope="col">Remove</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% products.forEach(product=> { %>
                                        <tr>
                                            <td class="image product-thumbnail"><img
                                                    src="/uploads/re-image/<%= product.productId.productImage[0] %>"
                                                    alt="#"></td>
                                            <td class="product-des product-name">
                                                <h5 class="product-name"><a href="shop-product-right.html">
                                                        <%= product.productId.productName %>
                                                    </a></h5>
                                                <p class="font-xs"><br></p>
                                            </td>
                                            <td class="price" data-title="Price"><span>â‚¹<%= product.productId.salePrice
                                                        %></span></td>
                                            <td class="text-center" data-title="Stock">
                                                <% if(product.productId.quantity===0) { %>
                                                    <span class="color3 font-weight-bold" style="color: red;">Out of
                                                        Stock...ðŸ¥²</span>
                                                    <% } else { %>
                                                        <span class="color3 font-weight-bold">In Stock...ðŸ¤©</span>
                                                        <% } %>
                                            </td>
                                            <td class="text-right" data-title="Cart">
                                                <% if(cartProductIds.includes(product.productId._id.toString())) { %>
                                                    <a href="/user-cart" class="btn btn-sm"><i
                                                            class="fi-rs-shopping-bag mr-5"></i>View Cart</a>
                                                    <% } else { %>
                                                        <form action="/add-to-cart-wishlist" method="post">
                                                            <input type="hidden" name="productId"
                                                                value="<%= product.productId._id %>" id="productId">
                                                            <input type="hidden" name="quantity" value="1">
                                                            <input type="hidden" name="totalPrice"
                                                                value="<%= product.productId.salePrice %>">
                                                            <button class="btn btn-sm"><i
                                                                    class="fi-rs-shopping-bag mr-5"></i>Add to
                                                                cart</button>
                                                        </form>
                                                        <% } %>
                                            </td>
                                            <td class="action" data-title="Remove">
                                                <a
                                                    onclick="removeProductInWishList(event, '<%= product.productId._id %>')">
                                                    <i class="fi-rs-trash"></i>
                                                </a>
                                            </td>
                                        </tr>
                                        <% }) %>
                                </tbody>

                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function removeProductInWishList(event, productId) {
            event.preventDefault();

            fetch('/remove-product-in-wishlist', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ productId })
            })
                .then((response) => response.json())
                .then((data) => {
                    if (data.success) {
                        Swal.fire({
                            icon: 'success',
                            title: 'The Product is Removed...ðŸ˜¶â€ðŸŒ«ï¸'
                        })
                            .then(() => {
                                location.reload();
                            })
                    } else {
                        Swal.fire({
                            icon: 'error',
                            title: 'Failed to remove the Product...ðŸ¤·â€â™‚ï¸',
                            text: data.method
                        })
                    }
                })
                .catch((error) => {
                    console.log('removeProductInWishList:', error);
                    Swal.fire({
                        icon: 'error',
                        title: 'Error...',
                        text: 'Somthing went wrong...'
                    })
                })

        }
    </script>
