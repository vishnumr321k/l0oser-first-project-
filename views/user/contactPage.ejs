<%- include('../partials/user/header3') %>
<style>
    *{
        margin: 0;
    }
    #sendUs{
        color: white;
    }
</style>
<main class="main">
    <div class="page-header breadcrumb-wrap">
        <div class="container">
            <div class="breadcrumb">
                <a href="/home">Home</a>
                <span></span>Contact Us
            </div>
        </div>
    </div>

    <section class="hero-2 bg-dark" style="background-color: black;">
        <div class="container">
            <div class="text-center">
                <h1 class="mb-20">Let's Talk About Your Idea</h1>
                <p class="mb-50" style="color: white;">Lorem ipsum dolor sit amet consectetur adipisicing elit.</p>
            </div>
        </div>
    </section>

    <!-- Contact Details Section -->
    <section class="contact-details bg-light py-50">
        <br><br>
        <div class="container">
            <div class="row">
                <!-- Contact Information -->
                <div class="col-md-6">
                    <h2 style="color: black;">Contact Information</h2>
                    <p><strong>Phone:</strong> +1 (123) 456-7890</p>
                    <p><strong>Email:</strong> example@yourdomain.com</p>
                    <p><strong>Address:</strong> 123 Your Street, Your City, Your Country</p>
                </div>

                <!-- Contact Form -->
                <div class="col-md-6">
                    <h2 style="color: black;" id="sendUs">Send Us a Message</h2>
                    <form action="/contact" method="POST">
                        <div class="form-group">
                            <label for="name">Your Name</label>
                            <input type="text" class="form-control" id="name" name="name" placeholder="Enter your name" required>
                        </div>
                        <div class="form-group">
                            <label for="email">Your Email</label>
                            <input type="email" class="form-control" id="email" name="email" placeholder="Enter your email" required>
                        </div>
                        <div class="form-group">
                            <label for="message">Your Message</label>
                            <textarea class="form-control" id="message" name="message" rows="5" placeholder="Write your message here..." required></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">Send Message</button>
                    </form>
                </div>
            </div>
        </div>
    </section>
    <br><br>
</main>

<%- include('../partials/user/footer2') %>
