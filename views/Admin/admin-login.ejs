<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Login</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        }

        body {
            min-height: 100vh;
            background: #000; /* Black background */
            color: #FFF; /* White text */
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

        .login-container {
            max-width: 400px;
            margin: 2rem auto;
            background: #FFF; /* White container */
            color: #000; /* Black text inside */
            padding: 2rem;
            border-radius: 20px;
            box-shadow: 0 4px 6px rgba(255, 255, 255, 0.2);
        }

        h1 {
            font-size: 1.5rem;
            margin-bottom: 1.5rem;
            color: #000; /* Black heading */
            text-align: center;
        }

        .input-group {
            margin-bottom: 1.5rem;
        }

        input {
            width: 100%;
            padding: 0.75rem;
            border: 1px solid #333; /* Gray border */
            border-radius: 8px;
            margin-bottom: 0.5rem;
            font-size: 1rem;
            background: #ffffff; /* Black background for inputs */
            color: #000000; /* White text for inputs */
            transition: border-color 0.3s, background-color 0.3s;
        }

        input:focus {
            border-color: #FFF; /* White border on focus */
            outline: black;
        }

        .login-btn {
            width: 100%;
            padding: 0.75rem;
            background: #000; /* Black button */
            color: #FFF; /* White text */
            border: 1px solid #FFF; /* White border */
            border-radius: 8px;
            margin-bottom: 1.5rem;
            cursor: pointer;
            font-size: 1rem;
            transition: background-color 0.3s, color 0.3s;
        }

        .login-btn:hover {
            background: #FFF; /* White background on hover */
            color: #000; /* Black text on hover */
        }

        .social-login {
            display: flex;
            gap: 1rem;
            margin-bottom: 1rem;
        }

        .social-btn {
            flex: 1;
            padding: 0.75rem;
            border: 1px solid #333; /* Gray border */
            border-radius: 8px;
            background: #000; /* Black background */
            color: #FFF; /* White text */
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            font-weight: bold;
            transition: background-color 0.2s, color 0.2s;
        }

        .social-btn:hover {
            background: #FFF; /* White background on hover */
            color: #000; /* Black text on hover */
        }

        .links {
            text-align: center;
            color: #BBB; /* Gray text for links */
            font-size: 0.9rem;
        }

        .links a {
            color: #FFF; /* White links */
            text-decoration: none;
            display: inline-block;
            margin-top: 10px;
            transition: color 0.3s;
        }

        .links a:hover {
            color: #BBB; /* Gray links on hover */
        }

        footer {
            background: #000;
            color: #FFF;
            padding: 2rem;
            margin-top: auto;
            text-align: center;
        }

        .error-message {
            color: red;
            font-size: 0.85rem;
            margin-top: 0.5rem;
            display: none;
        }
    </style>
</head>
<body>
    <main>
        <div class="login-container">
            <h1>Admin Login</h1>

            <form id="admin-login-form" method="post" action="/admin/signin">
                <div class="input-group">
                    <input type="email" id="admin-email" placeholder="Email" name="email" required>
                    <div id="error-admin-email" class="error-message"></div>
                </div>

                <div class="input-group">
                    <input type="password" id="admin-password" placeholder="Password" name="password" required>
                    <div id="error-admin-password" class="error-message"></div>
                </div>

                <button type="submit" class="login-btn">Login</button>
            </form>

            <!-- <div class="social-login">
                <a href="/auth/google/admin" class="social-btn">Login with Google</a>
            </div> -->

            <div class="links">
                <a href="/admin/forgot-password">Forgot Password?</a>
            </div>
        </div>
    </main>

    <footer>
        <p>&copy; 2024 Your Admin Dashboard. All rights reserved.</p>
    </footer>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const form = document.getElementById('admin-login-form');
            const emailInput = document.getElementById('admin-email');
            const passwordInput = document.getElementById('admin-password');
            const errorEmail = document.getElementById('error-admin-email');
            const errorPassword = document.getElementById('error-admin-password');

            form.addEventListener('submit', function (e) {
                let valid = true;

                // Reset error messages
                errorEmail.style.display = 'none';
                errorPassword.style.display = 'none';

                // Validate email
                const emailPattern = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
                if (!emailPattern.test(emailInput.value.trim())) {
                    errorEmail.style.display = 'block';
                    errorEmail.innerHTML = 'Invalid email format';
                    valid = false;
                } else {
                    errorEmail.style.display = 'none';
                }

                // Validate password
                const password = passwordInput.value;
                if (password.length < 8) {
                    errorPassword.style.display = 'block';
                    errorPassword.innerHTML = 'Password must be at least 8 characters long';
                    valid = false;
                } else {
                    errorPassword.style.display = 'none';
                }

                if (!valid) {
                    e.preventDefault();  // Prevent form submission
                }
            });
        });
    </script>
</body>
</html>
