<%- include('../partials/admin/header') %>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<style>
    #the_row{
        margin-left: -181px;
    }

    #name_rive{
        margin-left: -163px;
    }

</style>

<div class="container-fluid">
    <div class="row">
        <!-- Sidebar would be in header partial -->
        
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
            <!-- Content Header -->
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom" id="name_rive">
                <div>
                    <h1 class="h2">Coupon Management</h1>
                    <p class="text-muted">Add, edit, or delete coupons</p>
                </div>
            </div>

            <div class="row" id="the_row">
                <!-- Coupon Form -->
                <div class="col-12 col-md-4 mb-4">
                    <div class="card shadow-sm">
                        <div class="card-header bg-white">
                            <h5 class="card-title mb-0 text-white" id="Head_color">Create New Coupon</h5>
                        </div>
                        <div class="card-body">
                            <form action="/admin/creat-coupen" method="post">
                                <div class="mb-3">
                                    <label for="couponCode" class="form-label">Coupon Code</label>
                                    <input type="text" class="form-control" id="couponCode" name="couponCode" placeholder="Enter coupon code" />
                                    <div class="text-danger"  id="coupenCodeErr"></div>
                                    <%if(message){%>
                                        <div class="text-danger"><%=message%></div>
                                    <%}%>
                                </div>

                                <div class="mb-3">
                                    <label for="discountPercentage" class="form-label">Discount Percentage (%)</label>
                                    <input type="number" class="form-control" id="discountPercentage" name="discountPercentage" placeholder="1-100" min="1" max="100" />
                                    <div class="text-danger"  id="discoundErr"></div>
                                </div>

                                <div class="mb-3">
                                    <label for="minimumPrice" class="form-label">Minimum Price</label>
                                    <input type="number" class="form-control" id="minimumPrice" name="minimumPrice" placeholder="Enter minimum amount" min="0" />
                                    <div class="text-danger"  id="minimumPriceErr"></div>
                                </div>

                                <div class="mb-3">
                                    <label for="endDate" class="form-label">End Date</label>
                                    <input type="date" class="form-control" id="endDate" name="endDate" />
                                    <div class="text-danger" id="validErr"></div>
                                </div>

                                <button type="submit" class="btn btn-primary w-100" onclick="coupenValidation(event)">Create Coupon</button>
                            </form>
                        </div>
                    </div>
                </div>

                <!-- Coupons Table -->
                <div class="col-12 col-md-8">
                    <div class="card shadow-sm">
                        <div class="card-header bg-white">
                            <h5 class="card-title mb-0">Active Coupons</h5>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-hover align-middle">
                                    <thead>
                                        <tr>
                                            <th>Coupon Code</th>
                                            <th>Discount</th>
                                            <th>Min. Price</th>
                                            <th>Valid Until</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% coupens.forEach(coupen => { %>
                                        <tr>
                                            <td><span class="badge bg-light text-dark"><%= coupen.couponCode %></span></td>
                                            <td><%= coupen.coupenDiscountPercentage %>%</td>
                                            <td><%= coupen.minPrice %></td>
                                            <td><%= coupen.endAt.toLocaleDateString() %></td>
                                            <td>
                                                <form action="/admin/delete-coupon" method="post" class="d-inline" id="coupenRemove"> 
                                                    <input type="hidden" name="couponId" value="<%= coupen._id %>">
                                                    <button type="submit" class="btn btn-sm btn-outline-danger" onclick="coupenDeleteConfirm(event, '<%= coupen._id %>')">Delete</button>
                                                </form>
                                            </td>
                                        </tr>
                                        <%})%>
                                    </tbody>
                                </table>
                            </div>

                            <!-- Pagination -->
                            <nav aria-label="Page navigation" class="mt-4">
                                <ul class="pagination justify-content-center">
                                    <li class="page-item disabled">
                                        <a class="page-link" href="#" tabindex="-1">Previous</a>
                                    </li>
                                    <li class="page-item active"><a class="page-link" href="#">1</a></li>
                                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                                    <li class="page-item">
                                        <a class="page-link" href="#">Next</a>
                                    </li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>
<script>
    function coupenValidation(event){
        console.log("ustrststs")
        let isValid = true;

        document.getElementById('coupenCodeErr').innerText = '';
        document.getElementById('discoundErr').innerText = '';
        document.getElementById('minimumPriceErr').innerText = '';
        document.getElementById('validErr').innerText = '';

        const couponCode = document.getElementById('couponCode').value.trim();
        const discountPercentage = parseInt(document.getElementById('discountPercentage').value, 10);
        const minimumPrice = parseFloat(document.getElementById('minimumPrice').value);
        const endDate = document.getElementById('endDate').value;
        const today = new Date().toISOString().slice(0,10)
        console.log(endDate,today)

        if(!couponCode || couponCode === ''){
            document.getElementById('coupenCodeErr').innerText = 'Code is required...ü§®';
            isValid = false;
        }

        if(!discountPercentage){
            document.getElementById('discoundErr').innerText = 'Discount is required...ü•≤';
            isValid  = false;
        }

        if(discountPercentage < 1 || discountPercentage > 100){
             document.getElementById('discoundErr').innerText = 'Discount must be between 1 and 100...üòè';
             isValid = false;
        }

        if(isNaN(minimumPrice) || minimumPrice < 0){
            document.getElementById('minimumPriceErr').innerText = 'Minimum Price is required...üòÅ';
            isValid = false
        }
        
        if(!endDate){
            document.getElementById('validErr').innerText = 'End Date is Required....ü§®';
            isValid = false
        }

        if(endDate < today){
            document.getElementById('validErr').innerText = 'Select date is over...ü•≤';
            isValid = false
        }

        if(!isValid){
            event.preventDefault();
        }
        return isValid;
    }

    async function coupenDeleteConfirm(event, coupenId){
            event.preventDefault();
            const theResult = await Swal.fire({
                title: 'Are you sure to Cancel This Coupon..',
                icon:'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, Cancel...',
                cancelButtonText: 'No, Wait...'
            })
            
            if(theResult.isConfirmed){
                document.getElementById('coupenRemove').submit();
            }
        }
    
    
</script>

